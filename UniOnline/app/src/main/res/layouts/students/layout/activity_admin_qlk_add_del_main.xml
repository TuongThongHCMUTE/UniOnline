<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Admin.AdminQlkAddDelMainActivity"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/tv_header_quanly"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#1F1D86"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Quản lý khoa"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/iv_back_quanly_qlk"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_header_quanly"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/icon_back_admin"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentQlkContainer"
        android:name="com.example.unionline.Views.Admin.AdminQlkAddFragment"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_below="@+id/tv_header_quanly"
        android:layout_marginTop="0dp" />


</RelativeLayout>