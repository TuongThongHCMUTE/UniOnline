<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    tools:context=".Views.Admin.AdminMainActivity">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/admin_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="fill_horizontal"
        android:background="@drawable/bottom_navigation_background"
        app:menu="@menu/admin_bottom_navigation" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/admin_fragment_container"
        android:name="com.example.unionline.Views.Admin.AdminAccountFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>