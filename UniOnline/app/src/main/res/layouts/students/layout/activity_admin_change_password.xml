<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Admin.AdminParentAccountActivity"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/tv_header_quanly"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#1F1D86"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/ib_admin_change_pass"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_header_quanly"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/icon_back_admin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header_quanly"
        android:layout_margin="10dp"
        android:background="@drawable/layout_admin_background_perinfo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="Đổi mật khẩu"
            android:textColor="#1F1D86"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#919191" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Nhập mật khẩu cũ:"
                android:textColor="#1F1D86"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_admin_qlkhoa_add_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_admin_edittext_perinfo"
                android:gravity="center_vertical"
                android:hint="********"
                android:paddingLeft="22dp"
                android:paddingTop="9dp"
                android:paddingRight="22dp"
                android:paddingBottom="9dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Nhập mật khẩu mới:"
                android:textColor="#1F1D86"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_admin_qlkhoa_add_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_admin_edittext_perinfo"
                android:gravity="center_vertical"
                android:hint="********"
                android:paddingLeft="22dp"
                android:paddingTop="9dp"
                android:paddingRight="22dp"
                android:paddingBottom="9dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Xác nhận mật khẩu mới:"
                android:textColor="#1F1D86"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_admin_qlkhoa_add_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_admin_edittext_perinfo"
                android:gravity="center_vertical"
                android:hint="********"
                android:paddingLeft="22dp"
                android:paddingTop="9dp"
                android:paddingRight="22dp"
                android:paddingBottom="9dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_admin_add_qlk"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:strokeColor="#1F1D86"
                app:strokeWidth="2dp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>