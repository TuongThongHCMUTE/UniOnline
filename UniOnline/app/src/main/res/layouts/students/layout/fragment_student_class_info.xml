<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layout_background_color"
    tools:context=".Views.Students.StudentClassInfoFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" >

            <!-- Tittle part -->
            <TextView
                android:id="@+id/txtClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/vn_class_name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/main_color"/>

            <TextView
                android:id="@+id/txtClassId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtClassName"
                android:text="@string/vn_class_id"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/text_blue_color"
                android:layout_marginTop="4dp"/>

            <!-- Label part -->
            <TextView
                android:id="@+id/txtStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtClassId"
                android:text="@string/vn_start_date"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                />

            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStartDate"
                android:text="@string/vn_end_date"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtEndDate"
                android:text="@string/vn_status"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStatus"
                android:text="@string/vn_room"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRoom"
                android:text="@string/vn_time"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />

            <!-- Value part -->
            <TextView
                android:id="@+id/txtStartDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtClassId"
                android:text="@string/vn_start_date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                />

            <TextView
                android:id="@+id/txtEndDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStartDateValue"
                android:text="@string/vn_end_date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtEndDateValue"
                android:text="@string/vn_status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtRoomValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStatusValue"
                android:text="@string/vn_room"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRoomValue"
                android:text="@string/vn_time"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                />

            <!-- Line -->
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/shadow_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTime" />

            <!-- Process part -->
            <TextView
                android:id="@+id/txtProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:text="@string/vn_process"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/txtProcessValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0/15 buá»•i"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtProcess" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>