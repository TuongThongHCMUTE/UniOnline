<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Teachers.TeacherClassDetailActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/teacher_class_tabLayout"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_classInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin lớp học"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_updateProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật tiến trình"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm số"
            />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/teacher_class_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>