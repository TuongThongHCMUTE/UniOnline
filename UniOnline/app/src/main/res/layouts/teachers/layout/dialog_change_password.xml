<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!-- Request card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Thay đổi mật khẩu"
                android:textSize="18sp"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <!-- Line -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/shadow_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Nhập mật khẩu cũ:"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCurrentPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_bg"
                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="24dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Nhập mật khẩu mới:"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_bg"
                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="24dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Xác nhận lại mật khẩu mới"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edReNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_bg"
                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="24dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/button_blue_outline"
                android:text="Thay đổi"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>